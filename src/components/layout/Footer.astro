---
import { SITE, FOOTER_LINKS } from '@/utils/constants';

const currentYear = new Date().getFullYear();
---

<footer class="bg-jungle-700 dark:bg-volcanic-950 text-white">
  <!-- Main Footer -->
  <div class="max-w-7xl mx-auto px-6 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-12">
      <!-- Brand Column -->
      <div class="lg:col-span-2">
        <a href="/" class="flex items-center gap-2 mb-6">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="w-6 h-6 text-amber-400"
          >
            <path d="M13 8c0-2.76-2.46-5-5.5-5S2 5.24 2 8h2l1-1 1 1h4" />
            <path d="M13 7.14A5.82 5.82 0 0 1 16.5 6c3.04 0 5.5 2.24 5.5 5h-3l-1-1-1 1h-3" />
            <path d="M5.89 9.71c-2.15 2.15-2.3 5.47-.35 7.43l4.24-4.25.7-.7.71-.71 2.12-2.12c-1.95-1.96-5.27-1.8-7.42.35" />
            <path d="M11 15.5c.5 2.5-.17 4.5-1 6.5h4c2-5.5-.5-12-1-14" />
          </svg>
          <span class="text-xl font-bold tracking-tight">{SITE.name}</span>
        </a>
        <p class="text-jungle-200 dark:text-volcanic-400 text-sm leading-relaxed max-w-sm mb-6">
          Your guide to authentic Siquijor experiences. From cliff jumping adventures to traditional healing rituals, discover the mystical island beyond the ordinary.
        </p>

        <!-- Social Links -->
        <div class="flex items-center gap-4">
          {FOOTER_LINKS.social.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 flex items-center justify-center rounded-full bg-jungle-600 dark:bg-volcanic-800 hover:bg-amber-500 dark:hover:bg-amber-500 transition-colors"
              aria-label={link.label}
            >
              {link.icon === 'instagram' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              )}
              {link.icon === 'facebook' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              )}
              {link.icon === 'tiktok' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Experiences Column -->
      <div>
        <h4 class="text-sm font-semibold uppercase tracking-wider text-amber-400 mb-4">
          Experiences
        </h4>
        <ul class="space-y-3">
          {FOOTER_LINKS.experiences.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-jungle-200 dark:text-volcanic-400 hover:text-white transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Planning Column -->
      <div>
        <h4 class="text-sm font-semibold uppercase tracking-wider text-amber-400 mb-4">
          Planning
        </h4>
        <ul class="space-y-3">
          {FOOTER_LINKS.planning.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-jungle-200 dark:text-volcanic-400 hover:text-white transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- About Column -->
      <div>
        <h4 class="text-sm font-semibold uppercase tracking-wider text-amber-400 mb-4">
          About
        </h4>
        <ul class="space-y-3">
          {FOOTER_LINKS.about.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-jungle-200 dark:text-volcanic-400 hover:text-white transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-jungle-600 dark:border-volcanic-800">
    <div class="max-w-7xl mx-auto px-6 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-jungle-300 dark:text-volcanic-500">
          &copy; {currentYear} {SITE.name}. All rights reserved.
        </p>
        <p class="text-xs text-jungle-400 dark:text-volcanic-600">
          Made with love for Siquijor Island, Philippines
        </p>
      </div>
    </div>
  </div>
</footer>
