---
import { generateBreadcrumbSchema } from '@/utils/schema';
import SchemaMarkup from '@/components/seo/SchemaMarkup.astro';
import { SITE } from '@/utils/constants';

interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
  variant?: 'default' | 'light';
}

const { items, variant = 'default' } = Astro.props;
const isLight = variant === 'light';

// Build full breadcrumb items with home
const breadcrumbs = [
  { label: 'Home', href: '/' },
  ...items,
];

// Generate schema with full URLs
const schemaItems = breadcrumbs.map((item) => ({
  name: item.label,
  url: item.href ? new URL(item.href, SITE.url).toString() : SITE.url,
}));
---

<nav aria-label="Breadcrumb" class="mb-6">
  <ol class:list={["flex items-center flex-wrap gap-2 text-sm", isLight && "header-text-shadow"]}>
    {breadcrumbs.map((item, index) => (
      <li class="flex items-center">
        {index > 0 && (
          <svg
            class:list={[
              "w-4 h-4 mx-2",
              isLight ? "text-white/60" : "text-stone-400 dark:text-volcanic-500"
            ]}
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="m9 18 6-6-6-6" />
          </svg>
        )}
        {item.href && index !== breadcrumbs.length - 1 ? (
          <a
            href={item.href}
            class:list={[
              "transition-colors",
              isLight
                ? "text-white/80 hover:text-white"
                : "text-stone-600 dark:text-volcanic-400 hover:text-jungle-700 dark:hover:text-amber-400"
            ]}
          >
            {item.label}
          </a>
        ) : (
          <span class:list={[
            "font-medium",
            isLight ? "text-white" : "text-stone-900 dark:text-stone-100"
          ]}>
            {item.label}
          </span>
        )}
      </li>
    ))}
  </ol>
</nav>

<SchemaMarkup schema={generateBreadcrumbSchema({ items: schemaItems })} />
