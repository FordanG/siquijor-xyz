---
import { CATEGORIES } from '@/utils/constants';

const experiences = [
  {
    category: 'adventure',
    title: 'Adventure',
    description: 'Cliff jumping, cave spelunking, and adrenaline-pumping activities',
    image: 'https://images.unsplash.com/photo-1544551763-46a013bb70d5?q=80&w=2070&auto=format&fit=crop',
    count: 5,
    color: 'amber',
  },
  {
    category: 'photography',
    title: 'Photography',
    description: 'Capture stunning sunrises, waterfalls, and Instagram-worthy spots',
    image: 'https://images.unsplash.com/photo-1506905925346-21bda4d32df4?q=80&w=2070&auto=format&fit=crop',
    count: 5,
    color: 'reef',
  },
  {
    category: 'local-life',
    title: 'Local Culture',
    description: 'Meet healers, fishermen, and experience authentic island traditions',
    image: 'https://images.unsplash.com/photo-1523906921802-b5d2d899e93b?q=80&w=2070&auto=format&fit=crop',
    count: 4,
    color: 'jungle',
  },
  {
    category: 'niche',
    title: 'Wellness',
    description: 'Yoga retreats, traditional healing, and peaceful escapes',
    image: 'https://images.unsplash.com/photo-1544367567-0f2fcb009e0b?q=80&w=2070&auto=format&fit=crop',
    count: 3,
    color: 'jungle',
  },
];

const colorClasses = {
  amber: 'from-amber-500 to-amber-600',
  reef: 'from-reef-500 to-reef-600',
  jungle: 'from-jungle-500 to-jungle-600',
};
---

<section class="py-20 px-6 bg-white dark:bg-volcanic-900">
  <div class="max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-stone-900 dark:text-stone-100 mb-4 font-display">
        Find Your Experience
      </h2>
      <p class="text-stone-600 dark:text-volcanic-400 max-w-xl mx-auto">
        Whether you seek adventure, culture, or tranquility, Siquijor offers something extraordinary.
      </p>
    </div>

    <!-- Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {experiences.map((exp) => (
        <a
          href={`/category/${exp.category}`}
          class="group relative aspect-[4/5] rounded-2xl overflow-hidden"
        >
          <!-- Image -->
          <img
            src={exp.image}
            alt={exp.title}
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            width="600"
            height="750"
            loading="lazy"
            decoding="async"
          />

          <!-- Gradient Overlay -->
          <div class:list={[
            'absolute inset-0 bg-gradient-to-t opacity-80 group-hover:opacity-90 transition-opacity',
            colorClasses[exp.color as keyof typeof colorClasses],
          ]}></div>

          <!-- Content -->
          <div class="absolute inset-0 flex flex-col justify-end p-6 text-white">
            <span class="text-sm font-medium opacity-80 mb-1">
              {exp.count} Experiences
            </span>
            <h3 class="text-2xl font-bold mb-2 font-display">
              {exp.title}
            </h3>
            <p class="text-sm opacity-90 line-clamp-2">
              {exp.description}
            </p>

            <!-- Arrow -->
            <div class="mt-4 flex items-center gap-2 text-sm font-medium opacity-0 group-hover:opacity-100 transition-opacity">
              <span>Explore</span>
              <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14"></path>
                <path d="m12 5 7 7-7 7"></path>
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
