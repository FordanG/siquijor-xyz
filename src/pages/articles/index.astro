---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import ArticleCard from '@/components/articles/ArticleCard.astro';
import { CATEGORIES } from '@/utils/constants';

// Get all published articles
const allArticles = await getCollection('articles', ({ data }) => !data.draft);

// Sort by publish date (newest first)
const sortedArticles = allArticles.sort(
  (a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime()
);

// Get featured articles
const featuredArticles = sortedArticles.filter((article) => article.data.featured);

// Get remaining articles
const regularArticles = sortedArticles.filter((article) => !article.data.featured);
---

<BaseLayout
  title="All Articles"
  description="Explore all our guides to Siquijor Island - from adventure activities to photography spots, local culture, and travel planning."
>
  <!-- Header Section -->
  <section class="pt-32 pb-12 px-6 bg-jungle-700 dark:bg-volcanic-950">
    <div class="max-w-7xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4 font-display">
        Explore Siquijor
      </h1>
      <p class="text-lg text-jungle-200 dark:text-volcanic-400 max-w-2xl">
        Discover authentic experiences, hidden gems, and practical guides for the mystical island of Siquijor.
      </p>
    </div>
  </section>

  <!-- Category Filters -->
  <section class="sticky top-16 md:top-20 z-30 bg-cream dark:bg-volcanic-900 border-b border-stone-200 dark:border-volcanic-700">
    <div class="max-w-7xl mx-auto px-6">
      <div class="flex items-center gap-2 py-4 overflow-x-auto no-scrollbar">
        <a
          href="/articles"
          class="px-4 py-2 rounded-full text-sm font-medium bg-jungle-700 text-white whitespace-nowrap"
        >
          All
        </a>
        {Object.values(CATEGORIES).map((category) => (
          <a
            href={`/category/${category.slug}`}
            class="px-4 py-2 rounded-full text-sm font-medium bg-stone-100 dark:bg-volcanic-800 text-stone-700 dark:text-stone-300 hover:bg-stone-200 dark:hover:bg-volcanic-700 transition-colors whitespace-nowrap"
          >
            {category.name}
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Articles -->
  {featuredArticles.length > 0 && (
    <section class="py-12 px-6">
      <div class="max-w-7xl mx-auto">
        <h2 class="text-2xl font-bold text-stone-900 dark:text-stone-100 mb-8 font-display">
          Featured Experiences
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {featuredArticles.slice(0, 2).map((article) => (
            <ArticleCard
              title={article.data.title}
              description={article.data.description}
              href={`/articles/${article.slug}`}
              image={article.data.heroImage.src}
              imageAlt={article.data.heroImage.alt}
              category={article.data.category}
              publishDate={article.data.publishDate}
              difficulty={article.data.difficulty}
              duration={article.data.duration}
              featured={true}
            />
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- All Articles -->
  <section class="py-12 px-6">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-2xl font-bold text-stone-900 dark:text-stone-100 mb-8 font-display">
        All Articles
      </h2>

      {regularArticles.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {regularArticles.map((article) => (
            <ArticleCard
              title={article.data.title}
              description={article.data.description}
              href={`/articles/${article.slug}`}
              image={article.data.heroImage.src}
              imageAlt={article.data.heroImage.alt}
              category={article.data.category}
              publishDate={article.data.publishDate}
              difficulty={article.data.difficulty}
              duration={article.data.duration}
            />
          ))}
        </div>
      ) : (
        <p class="text-stone-600 dark:text-volcanic-400 text-center py-12">
          No articles found. Check back soon for new content!
        </p>
      )}
    </div>
  </section>
</BaseLayout>
