---
import '@/styles/global.css';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import SEOHead from '@/components/seo/SEOHead.astro';
import SchemaMarkup from '@/components/seo/SchemaMarkup.astro';
import { generateOrganizationSchema, generateWebSiteSchema } from '@/utils/schema';

interface Props {
  title: string;
  description: string;
  image?: string;
  canonicalUrl?: string;
  type?: 'website' | 'article';
  publishDate?: Date;
  modifiedDate?: Date;
  noIndex?: boolean;
  keywords?: string[];
  author?: string;
  transparentHeader?: boolean;
}

const {
  title,
  description,
  image,
  canonicalUrl,
  type = 'website',
  publishDate,
  modifiedDate,
  noIndex = false,
  keywords = [],
  author,
  transparentHeader = false,
} = Astro.props;

const organizationSchema = generateOrganizationSchema();
const websiteSchema = generateWebSiteSchema();
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <SEOHead
      title={title}
      description={description}
      image={image}
      canonicalUrl={canonicalUrl}
      type={type}
      publishDate={publishDate}
      modifiedDate={modifiedDate}
      noIndex={noIndex}
      keywords={keywords}
      author={author}
    />

    <SchemaMarkup schema={[organizationSchema, websiteSchema]} />

    <!-- Prevent FOUC for dark mode -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        if (theme === 'dark' || (!theme && prefersDark)) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body class="min-h-screen flex flex-col bg-cream dark:bg-volcanic-900 text-stone-600 dark:text-stone-300 antialiased selection:bg-jungle-100 dark:selection:bg-jungle-900 selection:text-jungle-900 dark:selection:text-jungle-100">
    <Header transparent={transparentHeader} />

    <main class="flex-1">
      <slot />
    </main>

    <Footer />
  </body>
</html>
